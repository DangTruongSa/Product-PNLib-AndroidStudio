<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#BBE0F1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/book96" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tenloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/comfortaa_medium"
                android:text=" #TenLoai"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/comfortaa_medium"
                android:text=" #IDLoaisach"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <FrameLayout

                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/custon_cardbuttontop">

                <ImageView
                    android:id="@+id/btnedt1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/create64" />
            </FrameLayout>

            <FrameLayout

                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/custom_cardbuttonbottom">

                <ImageView
                    android:id="@+id/btndele1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/trash64" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>